// Settings
{
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.renderIndentGuides": true,
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.openPositioning": "last",
  "css.validate": false,
  "vsicons.hideFolders": true,
  "vsicons.hideCustomFolderIcons": true,
  "vsicons.hideIconsInTabs": true,
  "vsicons.hideIconsEditors": true,
  "vsicons.useFileAssociations": true,
  "explorer.enableDragAndDrop": false,
  "vsicons.dontShowNewVersionMessage": true,
  "editor.wordWrap": false
}

// keybindings.json (Mac)
[
  { "key": "cmd+ctrl+alt+5", "command": "workbench.action.debug.continue", "when": "inDebugMode" },
  { "key": "cmd+ctrl+i", "command": "cursorUp", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+shift+i", "command": "cursorUpSelect", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+k", "command": "cursorDown", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+shift+k", "command": "cursorDownSelect", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+j", "command": "cursorLeft", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+shift+j", "command": "cursorLeftSelect", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+l", "command": "cursorRight", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+shift+l", "command": "cursorRightSelect", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+u", "command": "cursorHome", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+shift+u", "command": "cursorHomeSelect", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+o", "command": "cursorEnd", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+shift+o", "command": "cursorEndSelect", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+8", "command": "cursorPageUp", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+,", "command": "cursorPageDown", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+m", "command" : "cursorWordStartLeft", "When": "editorTextFocus" },
  { "key": "cmd+ctrl+shift+m", "command" : "cursorWordStartLeftSelect", "When": "editorTextFocus" },
  { "key": "cmd+ctrl+.", "command" : "cursorWordEndRight", "When": "editorTextFocus" },
  { "key": "cmd+ctrl+shift+.", "command" : "cursorWordEndRightSelect", "When": "editorTextFocus" },
  { "key": "up", "command" : "", "When": "editorTextFocus" },
  { "key": "down", "command" : "", "When": "editorTextFocus" },
  { "key": "left", "command" : "", "When": "editorTextFocus" },
  { "key": "right", "command" : "", "When": "editorTextFocus" },
  { "key": "shift+up", "command" : "", "When": "editorTextFocus" },
  { "key": "shift+down", "command" : "", "When": "editorTextFocus" },
  { "key": "shift+left", "command" : "", "When": "editorTextFocus" },
  { "key": "shift+right", "command" : "", "When": "editorTextFocus" }
]
