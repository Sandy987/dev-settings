// Settings
{
  "editor.fontSize": 18,
  "editor.tabSize": 2,
  "editor.renderIndentGuides": true,
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.openPositioning": "last",
  "css.validate": false,
  "explorer.enableDragAndDrop": false,
  "editor.wordWrap": "off",
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 20,
  "editor.minimap.renderCharacters": false,
  "window.title": "${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty} ${activeEditorMedium}${separator}${rootName} ${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}${dirty}",
  "explorer.openEditors.visible": 12,
  "explorer.openEditors.dynamicHeight": false,
  "editor.renderWhitespace": "boundary",
  // "editor.fontFamily": "Papyrus, 'Comic Sans MS', Menlo, Monaco, 'Courier New', monospace"
  "editor.fontFamily": "'Comic Sans MS', Arial, Helvetica",
  "editor.cursorStyle": "block"
}

// keybindings.json (Mac)
[
  { "key": "cmd+ctrl+alt+5", "command": "workbench.action.debug.continue", "when": "inDebugMode" },
  { "key": "alt+cmd+i", "command": "cursorUp", "when": "editorTextFocus" },
  { "key": "alt+cmd+shift+i", "command": "cursorUpSelect", "when": "editorTextFocus" },
  { "key": "alt+cmd+k", "command": "cursorDown", "when": "editorTextFocus" },
  { "key": "alt+cmd+shift+k", "command": "cursorDownSelect", "when": "editorTextFocus" },
  { "key": "alt+cmd+j", "command": "cursorLeft", "when": "editorTextFocus" },
  { "key": "alt+cmd+shift+j", "command": "cursorLeftSelect", "when": "editorTextFocus" },
  { "key": "alt+cmd+l", "command": "cursorRight", "when": "editorTextFocus" },
  { "key": "alt+cmd+shift+l", "command": "cursorRightSelect", "when": "editorTextFocus" },
  { "key": "alt+cmd+u", "command": "cursorHome", "when": "editorTextFocus" },
  { "key": "alt+cmd+shift+u", "command": "cursorHomeSelect", "when": "editorTextFocus" },
  { "key": "alt+cmd+o", "command": "cursorEnd", "when": "editorTextFocus" },
  { "key": "alt+cmd+shift+o", "command": "cursorEndSelect", "when": "editorTextFocus" },
  { "key": "alt+cmd+8", "command": "cursorPageUp", "when": "editorTextFocus" },
  { "key": "alt+cmd+,", "command": "cursorPageDown", "when": "editorTextFocus" },
  { "key": "alt+cmd+m", "command" : "cursorWordStartLeft", "When": "editorTextFocus" },
  { "key": "alt+cmd+shift+m", "command" : "cursorWordStartLeftSelect", "When": "editorTextFocus" },
  { "key": "alt+cmd+.", "command" : "cursorWordEndRight", "When": "editorTextFocus" },
  { "key": "alt+cmd+shift+.", "command" : "cursorWordEndRightSelect", "When": "editorTextFocus" },
  { "key": "cmd+shift+u", "command": "editor.action.transformToUppercase", "when": "editorTextFocus" },
  { "key": "cmd+shift+l", "command": "editor.action.transformToLowercase", "when": "editorTextFocus" },
  { "key": "cmd+ctrl+alt+f", "command": "eslint.executeAutofix", "when": "editorTextFocus"}
]
